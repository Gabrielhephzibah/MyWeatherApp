<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="9dp" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/forecastTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:00"
        android:textStyle="bold"
        android:textSize="12sp"
        android:fontFamily="serif"
        android:textColor="@color/search_icon_color"
        />

    <ImageView
        android:id="@+id/forecastImage"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_filter_vintage_black"/>

    <TextView
        android:id="@+id/forecastTemp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16.7Â°C"
        android:textSize="12sp"
        android:fontFamily="serif"
        android:textColor="@color/search_icon_color"
        />
    </LinearLayout>






</LinearLayout>